{
    "name": "ergon/employee-tracker",
    "description": "Enterprise-Grade PHP Employee Tracker & Task Manager for MSMEs",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "firebase/php-jwt": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Ergon\\": "app/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "deploy": "php scripts/deploy.php"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}